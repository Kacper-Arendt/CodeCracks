{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev2": "tsx watch src/index.ts",
    "build2": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "build:start": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "start2": "node dist/index.js",
    "api:start": "nodemon -w src/* -x 'ts-node src/api.ts'",
    "build": "tsc -b",
    "build:start3": "ts-node src/api.ts",
    "docker:build": "tar -C ../.. --exclude='node_modules' --exclude='dist' --exclude='web/build' --exclude='web/cache' --exclude='.git' --exclude='.idea' --exclude='.github' -cf - . | docker build --progress=plain -f apps/api/Dockerfile - -t mono/api",
    "docker:start": "docker run --rm -it -p 3002:3002 -e DATABASE_URL=postgresql://test:test@mono-api-db:5432/api --link=mono-api-db mono/api",
    "start": "concurrently -kn=api,db 'pnpm:api:start' 'pnpm:db:start'",
    "type-check": "tsc"
  },
  "keywords": [],
  "author": "ArendtKacper",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.17",
    "esbuild": "^0.17.8",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
